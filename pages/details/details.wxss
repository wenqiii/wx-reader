/* pages/details/details.wxss */
.page_detail {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  font-family: sans-serif;
  /* position: relative; */
}

.d_bg {
  width: 100%;
}

.d_bg image {
  width: 100%;
  height: 400rpx;
}

.d_container {
  width: 90%;
  height: 30%;
  margin-left: auto;
  margin-right: auto; 
  padding: 25rpx 20rpx;
  border-radius: 20rpx;
  /* top: 370rpx;
  position: fixed;  */
  border: 3px solid grey;
}
.d_tag {
  height: 70rpx;
  font-size: 28rpx;
  color: white;
  background: black;
  /* position: absolute;  */
  display: flex;
  line-height: 70rpx;
  flex-direction: row;
   opacity: 0;    
}

.tag-img {
  padding-top: 20rpx;
}

.tag-img image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 5rpx;
  margin-right: 10rpx;
}

.d_header {
  width: 100%;
  height: 30%;
  padding: 5rpx;
  border-bottom: 1px solid grey; 
}

.book-name {
  width: 100%;
  height: 15%;
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: 400;
}

.d_detail {
  width: 100%;
  height: 15%;
  color: grey;
  display: flex;
  margin-bottom: 10rpx;
  flex-direction: row;
}

 .d_author {
   line-height: 100%;
   margin-right: 20rpx;
 }

 .d_beLooked {
   line-height: 100%;
   display: flex;
   flex-direction: row;
   margin-right: 20rpx;
}

 .look-img image {
  width: 30rpx;
  height: 30rpx;
} 

.d_content {
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  border-bottom: 1px solid grey;
}

.d_share {
  width: 100%;
  display: flex;
  flex-direction: row;  
  justify-content: flex-start;
  margin-top: 20rpx;}
.share-img {
  line-height: 100%;
  margin-right: 20rpx;
}
.share-img image {
  width: 50rpx;
  height: 50rpx;
} 
.share-text {
  line-height: 50rpx;
  font-size: 28rpx;
}

.d_bottom-bar {
   width: 100%;
   bottom: 0;
   position: fixed;
}

.bottom-bar {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.bottom-bar-item {
  width: 19%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}
.bottom-bar-item .pic {
  width: 100%;
  height: 42rpx;
}
.bottom-bar-item .pic image {
  width: 40rpx;
  height: 40rpx;
}
.bottom-bar-item .text {
  width: 100%;
  height: 42rpx;
}
.read {
  /* overflow: hidden; */
}

.read button {
  width: 120rpx;
  height: 120rpx;
  font-size: 28rpx;
  line-height: 120rpx; 
  background-color: red;
  border-radius: 50%;
}